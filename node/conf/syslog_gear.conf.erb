$ModLoad imuxsock
$SystemLogSocketName /var/lib/openshift/<%= ENV['OPENSHIFT_GEAR_UUID'] %>/.syslog/syslog.sock

$ModLoad imudp
$UDPServerAddress <%= ENV['OPENSHIFT_SYSLOG_IP'] %>
$UDPServerRun 514

$ModLoad omuxsock
$OMUxSockSocket /dev/log

$template OpenShift,"%TIMESTAMP:::date-rfc3339% %HOSTNAME% app=<%= ENV['OPENSHIFT_APP_UUID'] %> gear=<%= ENV['OPENSHIFT_GEAR_UUID'] %> %syslogtag%%msg:::sp-if-no-1st-sp%%msg:::drop-last-lf%\n"

$template OpenShiftForward,"<%%PRI%>%TIMESTAMP:::date-rfc3339% %HOSTNAME% %syslogtag:1:32% app=<%= ENV['OPENSHIFT_APP_UUID'] %> gear=<%= ENV['OPENSHIFT_GEAR_UUID'] %>%msg:::sp-if-no-1st-sp%%msg:::drop-last-lf%\n"

*.* /var/lib/openshift/<%= ENV['OPENSHIFT_GEAR_UUID'] %>/.syslog/gear.log;OpenShift
*.* :omuxsock:;OpenShiftForward
